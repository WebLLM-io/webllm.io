---
const items = [
  {
    phase: 'Now',
    title: '@webllm-io/sdk',
    description: 'Intelligent routing, local/cloud inference, OPFS caching, device scoring',
    active: true,
  },
  {
    phase: 'Next',
    title: '@webllm-io/ui',
    description: 'Headless download progress, device panel, model switcher components',
    active: false,
  },
  {
    phase: 'Next',
    title: '@webllm-io/rag',
    description: 'Browser-native vector DB, private document embedding and retrieval',
    active: false,
  },
  {
    phase: 'Future',
    title: 'WebLLM Analytics',
    description: 'Device distribution dashboard, token savings calculator, usage insights',
    active: false,
  },
];
---

<section class="section roadmap">
  <div class="container">
    <p class="section-label">Roadmap</p>
    <h2 class="section-title">Building the Web AI Stack</h2>
    <p class="section-subtitle">
      A deliberate, phased approach to browser-native AI infrastructure.
    </p>

    <div class="roadmap-timeline">
      {items.map((item) => (
        <div class={`roadmap-item ${item.active ? 'roadmap-item-active' : ''}`}>
          <div class="roadmap-phase">{item.phase}</div>
          <div class="roadmap-content">
            <h3 class="roadmap-title">
              <code>{item.title}</code>
            </h3>
            <p class="roadmap-desc">{item.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .roadmap {
    border-top: 1px solid var(--color-border-subtle);
  }

  .section-label {
    font-size: 0.8125rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--color-accent);
    margin-bottom: 0.75rem;
  }

  .roadmap-timeline {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .roadmap-item {
    display: flex;
    gap: 1.5rem;
    align-items: flex-start;
    padding: 1.25rem 1.5rem;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    background: var(--color-bg-card);
    transition: border-color 0.2s ease;
  }

  .roadmap-item:hover {
    border-color: var(--color-text-muted);
  }

  .roadmap-item-active {
    border-color: rgba(124, 58, 237, 0.3);
    background: var(--gradient-card);
  }

  .roadmap-phase {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-muted);
    min-width: 60px;
    padding-top: 0.125rem;
  }

  .roadmap-item-active .roadmap-phase {
    color: var(--color-accent);
  }

  .roadmap-content {
    flex: 1;
  }

  .roadmap-title {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 0.375rem;
  }

  .roadmap-title code {
    font-size: 0.9375rem;
    color: var(--color-text);
  }

  .roadmap-item-active .roadmap-title code {
    background: var(--gradient-text);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .roadmap-desc {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    line-height: 1.5;
  }

  @media (max-width: 768px) {
    .roadmap-item {
      flex-direction: column;
      gap: 0.5rem;
    }
  }
</style>
